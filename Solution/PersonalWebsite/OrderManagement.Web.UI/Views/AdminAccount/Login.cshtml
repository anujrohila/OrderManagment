@using OrderManagement.Web.Domain.Resources
@using OrderManagement.Web.UI;
@model OrderManagement.Web.UI.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_AdminLoginLayout.cshtml";
}

@section Head
{
    @{ Html.RenderPartial("PageHeaderPartialView", Model.PageHeaderModel); }
}
<div class="container-fluid">
    <div class="row-fluid">

        <div class="row-fluid">
            <div class="span12 center login-header">
                <h2>Welcome to Charisma&</h2>
            </div>
            <!--/span-->
        </div>
        <!--/row-->

        <div class="row-fluid">

            <div class="well span5 center login-box">
                <div class="alert alert-info">
                    @OrderManagementResource.lblLoginPageTitle
                </div>

                @{ Html.RenderPartial("MessageRegionPartial", Model.ModelMessage); }
                @using (Ajax.BeginForm("Login", "AdminAccount", new AjaxOptions { OnComplete = "OnLoginFormComplete" }, new { enctype = "multipart/form-data", id = "frmAdminLogin" }))
                {
                    <fieldset>
                        <div class="input-prepend" title="@OrderManagementResource.lblUserName" data-rel="tooltip">
                            <span class="add-on"><i class="icon-user"></i></span>
                            @Html.TextBoxFor(m => m.UserName)
                            <div style="margin-left: -50px; margin-top: 5px">@Html.ValidationMessageFor(m => m.UserName)</div>
                        </div>
                        <div class="clearfix"></div>

                        <div class="input-prepend" title="@OrderManagementResource.lblPassword" data-rel="tooltip">
                            <span class="add-on"><i class="icon-lock"></i></span>
                            @Html.PasswordFor(m => m.Password)
                            <div style="margin-left: -50px; margin-top: 5px">@Html.ValidationMessageFor(m => m.Password)</div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="input-prepend">
                            <label class="remember" for="remember">
                                <input type="checkbox" id="remember" />@OrderManagementResource.lblRememberMe</label>
                        </div>
                        <div class="clearfix"></div>
                        <p class="center span5">
                            <button type="submit" class="btn btn-primary">@OrderManagementResource.lblLogin</button>
                        </p>
                    </fieldset>
                }
            </div>
            <!--/span-->
        </div>
        <!--/row-->
    </div>
    <!--/fluid-row-->
</div>

@Html.Script("~/Content/Scripts/Administrator/Login.js")