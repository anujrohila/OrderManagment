@using OrderManagement.Web.Domain.Resources;
@model OrderManagement.Web.Domain.tblOrganizationDTO
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_AdminLoginLayout.cshtml";
}
<div class="container-fluid" style="align-content: center">
    <div class="row-fluid">
        <div class="row-fluid">
            <div class="span18 center login-header">
            </div>
        </div>
        <div class="row-fluid">
            <div class="well span5 center login-box">
                <div class="alert alert-info">
                    Please register with your Personal Details and Username and Password.
                </div>
                <div class="row-fluid sortable">
                    <div class="box span12">
                        <div class="box-content">
                            @using (Html.BeginForm("Register", "AdminAccount", FormMethod.Post, new { @class = "form-horizontal" }))
                            {
                                <fieldset>
                                    <legend></legend>
                                    <div class="control-group">
                                        <label class="control-label" for="typeahead">@OrderManagementResource.lblOrganizationName</label>
                                        <div class="controls">
                                            @Html.TextBoxFor(m => m.OrganizationName)
                                            <div>
                                                @Html.ValidationMessageFor(m => m.OrganizationName, null, new { @class = "alert-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="control-group">
                                        <label class="control-label" for="typeahead">@OrderManagementResource.lblFirstName</label>
                                        <div class="controls">
                                            @Html.TextBoxFor(m => m.FirstName)
                                            <div>
                                                @Html.ValidationMessageFor(m => m.FirstName, null, new { @class = "alert-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="control-group">
                                        <label class="control-label" for="typeahead">@OrderManagementResource.lblLastName</label>
                                        <div class="controls">
                                            @Html.TextBoxFor(m => m.LastName)
                                            <div>
                                                @Html.ValidationMessageFor(m => m.LastName, null, new { @class = "alert-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="control-group">
                                        <label class="control-label" for="typeahead">@OrderManagementResource.lblMobileNo</label>
                                        <div class="controls">
                                            @Html.TextBoxFor(m => m.MobileNo)
                                            <div>
                                                @Html.ValidationMessageFor(m => m.MobileNo, null, new { @class = "alert-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="control-group" style="text-align: center">
                                        <button type="submit" style="width: 150px" class="btn btn-primary">Register</button>
                                    </div>
                                </fieldset>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
