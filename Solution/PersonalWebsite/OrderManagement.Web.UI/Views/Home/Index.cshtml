        .Render();
        }


    </div>
    <div class="row" style="padding: 10px">
        @(Html.Telerik().TreeView()
                .Name("TreeView")
                .Items(item =>
                {
                    item.Add()
                        .Text("Mail")
                        .Items(subItem =>
                        {
                            subItem.Add()
                                    .Text("Personal Folders");
                            subItem.Add()
                                    .Text("Deleted Items");
                            subItem.Add()
                                    .Text("Inbox");
                            subItem.Add()
                                    .Text("My Mail");
                            subItem.Add()
                                    .Text("Sent Items");
