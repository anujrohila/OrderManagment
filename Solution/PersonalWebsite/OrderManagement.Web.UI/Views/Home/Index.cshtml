@using Telerik.Web.Mvc.UI;
@using OrderManagement.Web.UI;
@model HomePageModel
@{
    ViewBag.Title = "Home Page";
}


<div class="row" style="padding-bottom: 200px">
    <div class="row" style="padding-top: 20px">
        @(Html.Telerik().Grid<Student>()
            .Name("StudentGrid")
            .DataKeys(datakKey => datakKey.Add(key => key.RollNo))
            .DataBinding(dataBinding => dataBinding.Ajax().Select("ListAllStudentAjax", "Home"))
            .Columns(columns =>
            {
                columns.Bound(column => column.RollNo).Title("RollNo");
                columns.Bound(column => column.Name).Title("Name");
                columns.Bound(column => column.Mark1).Title("Mark1");
                columns.Bound(column => column.Mark2).Title("Mark2");
                columns.Bound(column => column.Result).Title("Totals");

            })
            .Sortable()
            .Filterable()
            .Pageable(paging => paging.PageSize(5).Style(GridPagerStyles.NextPreviousAndNumeric).Position(GridPagerPosition.Bottom))
        )
    </div>
    <div class="row" style="padding-top: 30px">
        <div class="col-xs-3">
            <div class="row" style="padding: 5px">
                Date time pciker
            </div>
            <div class="row" style="padding: 5px">
                Combobox
            </div>
            <div class="row" style="padding: 5px">
                Dropdownbox
            </div>
        </div>
        <div class="col-xs-4">
            <div class="row" style="padding: 5px">
                @(Html.Telerik().DatePicker()
                    .Name("maxDate")
                    .Value((DateTime)DateTime.Now)
            )
            </div>

            <div class="row" style="padding: 5px">
                @(Html.Telerik().ComboBox()
                        .Name("ComboBox")
                        .BindTo(new SelectList(Model.Students, "RollNo", "Name"))
                )
            </div>
            <div class="row" style="padding: 5px">
                @(Html.Telerik().DropDownList()
                    .Name("DropDownList")
                    .BindTo(new SelectList(Model.Students, "RollNo", "Name"))
                 )
            </div>

        </div>
    </div>
    <div class="row">
        @{ Html.Telerik().Menu()
        .Name("Menu")
        .Items(menu =>
        {
            menu.Add()
                .Text("ASP.NET MVC")
                .Items(item =>
                {
                    item.Add().Text("Grid");
                    item.Add().Text("Menu");
                    item.Add().Text("PanelBar");
                    item.Add().Text("TabStrip");
                });
            menu.Add()
                .Text("Silverlight")
                .Items(item =>
                {
                    item.Add().Text("GridView");
                    item.Add().Text("Scheduler");
                    item.Add().Text("Docking");
                    item.Add().Text("Chart");
                    item.Add().Text("... and 28 more!").Url("http://www.telerik.com/products/silverlight.aspx");
                });
            menu.Add()
                .Text("ASP.NET AJAX")
                .Items(item =>
                {
                    item.Add().Text("Grid");
                    item.Add().Text("Editor");
                    item.Add().Text("Scheduler");
                    item.Add().Text("... and 28 more!").Url("http://www.telerik.com/products/aspnet-ajax.aspx");
                });
            menu.Add()
                .Text("OpenAccess ORM")
                .Content(@<text>
            <img src="@Url.Content("~/Content/Common/orm-comparison.png") " alt="Telerik OpenAccess" />
            <a id="buy" href="http://www.telerik.com/purchase/individual/orm.aspx">Telerik OpenAccess ORM
            </a>
            <a id="express" href="http://www.telerik.com/community/license-agreement.aspx?pId=639">Telerik OpenAccess ORM Express
            </a>
            </text>);
            menu.Add()
                .Text("Reporting");
            menu.Add()
                .Text("Sitefinity ASP.NET CMS");
            menu.Add()
                .HtmlAttributes(new { style = "border-right: 0;" })
                .Text("Other products")
                .Items(item =>
                {
                    item.Add().Text("Web Testing Tools");
                    item.Add().Text("WinForms UI Controls");
                    item.Add().Text("WPF UI Controls");
                });
        })
        .Render();
        }
    </div>
    <div class="row" style="padding: 10px">
        @(Html.Telerik().NumericTextBox()
            .Name("NumericTextBox")
            .Spinners(true)
            .MinValue(0)
            .MaxValue(10000000)
         )

    </div>
