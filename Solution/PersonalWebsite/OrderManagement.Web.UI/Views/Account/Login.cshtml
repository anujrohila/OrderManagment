@using OrderManagement.Web.Domain.Resources
@using OrderManagement.Web.UI;
@model OrderManagement.Web.UI.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_AdminLoginLayout.cshtml";
}

@section Head
{
    @{ Html.RenderPartial("PageHeaderPartialView", Model.PageHeaderModel); }
}
<div id="page-login" class="row">
    <div class="col-xs-12 col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
        <div class="text-right">
        </div>

        @using (Ajax.BeginForm("Login", "AdminAccount", new AjaxOptions { OnComplete = "OnLoginFormComplete" }, new { enctype = "multipart/form-data", id = "frmAdminLogin" }))
        {
            <div class="box">
                <div class="box-content">
                    <div class="text-center">
                        <h3 class="page-header">@OrderManagementResource.lblLoginPageTitle</h3>
                    </div>
                    <div class="form-group">
                        @{ Html.RenderPartial("MessageRegionPartial", Model.ModelMessage); }
                    </div>
                    <div class="form-group">
                        <label class="control-label">@OrderManagementResource.lblUserName</label>
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "help-block" })
                    </div>
                    <div class="form-group">
                        <label class="control-label">@OrderManagementResource.lblPassword</label>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, null, new { @class = "help-block" })
                    </div>
                    <div class="text-center">
                        <a href="Account/Register" class="control-label">@OrderManagementResource.lblCreateAccount</a> | 
                        <a href="Account/ForgotPassword" class="control-label">@OrderManagementResource.lblForgotPassword</a>
                    </div>
                    <div class="text-center" style="margin-top: 15px">
                        <button type="submit" class="btn btn-primary">@OrderManagementResource.lblLogin</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
@Html.Script("~/Content/Scripts/Administrator/Login.js")