@using OrderManagement.Web.UI
@using OrderManagement.Web.Domain.Resources
@using Telerik.Web.Mvc.UI;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>@OrderManagementResource.lblProjectTitle</title>
    <meta name="description" content="" />
    <meta name="keywords" content="" />
    <meta name="viewport" content="width=device-width" />
    @Scripts.Render("~/bundles/modernizr")
    @Html.Style("~/Content/Styles/Shared/bootstrap.css")
    @Html.Style("~/Content/Styles/Shared/Common.css")
    @(Html.Telerik().StyleSheetRegistrar()
                      .DefaultGroup(group => group
                          .Add("telerik.common.css")
                          .Add("telerik.vista.css")
                          .Compress(true).CacheDurationInDays(10000))
                     )


</head>
<body>
    <div id="body">
        @RenderSection("featured", required: false)
        <div class="container">
            @RenderBody()
        </div>
    </div>

    @Html.Script("~/Content/Scripts/Shared/jquery-1.8.1.min.js")
    @Html.Script("~/Content/Scripts/Shared/jquery.validate.min.js")
    @Html.Script("~/Content/Scripts/Shared/jquery.validate.unobtrusive.min.js")
    @Html.Script("~/Content/Scripts/Shared/Common.min.js")


    @Html.Telerik().ScriptRegistrar().jQuery(false)
    <script src="~/Base/OrderManagementResource" type="text/javascript"></script>
</body>
</html>

