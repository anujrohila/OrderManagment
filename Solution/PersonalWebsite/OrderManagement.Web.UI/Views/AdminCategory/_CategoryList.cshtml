@using OrderManagement.Web.Domain.Resources
@using OrderManagement.Web.UI;
@model List<OrderManagement.Web.Domain.tbl_Category_DTO>

<table class="table table-striped table-bordered bootstrap-datatable datatable">
    <thead>
        <tr>
            <th>@OrderManagementResource.lblCategoryName</th>
            <th>@OrderManagementResource.lblAliasName</th>
            <th>@OrderManagementResource.lblDescription</th>
            <th>@OrderManagementResource.IsActive</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CatgeoryName</td>
                <td>@category.AliasName</td>
                <td>@category.Description</td>
                <td class="center">
                    @if (category.IsActive == true)
                    {
                        <span class="label label-success">@OrderManagementResource.lblActive</span>
                    }
                    else
                    {
                        <span class="label">@OrderManagementResource.lblInactive</span>
                    }
                </td>
                <td class="center">
                    @Html.ActionLink(OrderManagementResource.lblEdit, "Edit", new { id = 10 }, new { @class = "btn btn-info" })
                    @Html.ActionLink(OrderManagementResource.lblDelete, "Delete", new { id = 10 }, new { @class = "btn btn-danger", @onclick = "return DeleteConfirm()" })
                </td>
            </tr>
        }
    </tbody>
</table>

