@using OrderManagement.Web.Domain.Resources
@using OrderManagement.Web.UI;
@model AdminCategoryModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@Html.Style("~/Content/Styles/Administrator/Category.css")
<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header well" data-original-title>
            <h2><i></i>@OrderManagementResource.lblCategoryList</h2>
            <div class="box-icon">
                <a href="#" class="btn btn-setting btn-round"><i class="icon-cog"></i></a>
                <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
                <a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
            </div>
        </div>
        <div class="box-content">
            <div id="divCategoryList">
            </div>
            <br />
            <br />
            <table class="table table-striped table-bordered bootstrap-datatable datatable">
                <thead>
                    <tr>
                        <th>@OrderManagementResource.lblCategoryName</th>
                        <th>@OrderManagementResource.lblAliasName</th>
                        <th>@OrderManagementResource.lblDescription</th>
                        <th>@OrderManagementResource.IsActive</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model.CategoryList)
                    {
                        <tr>
                            <td>@category.CatgeoryName</td>
                            <td>@category.AliasName</td>
                            <td>@category.Description</td>
                            <td class="center">
                                @if (category.IsActive == true)
                                {
                                    <span class="label label-success">@OrderManagementResource.lblActive</span>
                                }
                                else
                                {
                                    <span class="label">@OrderManagementResource.lblInactive</span>
                                }
                            </td>
                            <td class="center">
                                @Html.ActionLink(OrderManagementResource.lblEdit, "Edit", new { id = 10 }, new { @class = "btn btn-info" })
                                @Html.ActionLink(OrderManagementResource.lblDelete, "Delete", new { id = 10 }, new { @class = "btn btn-danger", @onclick = "return DeleteConfirm()" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!--/span-->

</div>


@Html.Script("~/Content/Scripts/Administrator/Category.js")

